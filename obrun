#!/usr/bin/env bash

### ocamlbuild wrapper

if [[ ${1} =~ (|-|--)help  ]]; then
  echo "USAGE: obrun [OPTIONS] [FILENAME]"
  echo "  This script is wrapper of ocamlbuild"
fi

sourcefile="${!#}"
filename="$(basename "${sourcefile}")"
filename_wo_ext="${filename%.*}"

ob -quiet "${@}"

if [ -x "./${filename_wo_ext}" ]; then
  ./${filename_wo_ext}
fi

if [ -x "./${filename_wo_ext}" ]; then
  rm "./${filename_wo_ext}"
fi

